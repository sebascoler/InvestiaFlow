rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is team member
    // Note: Firestore rules limitations mean we can't query teamMembers collection directly
    // So we use a two-step approach:
    // 1. Rules allow read if document has teamId and team exists
    // 2. Application code filters results to only show documents from user's teams
    function isTeamMember(teamId) {
      // This function is kept for potential future use with more complex rules
      // Currently, membership is validated in application code
      return isAuthenticated() && teamId != null && teamId != '';
    }
    
    // Helper to check if user can read owner's documents (if user is member of owner's team)
    // This is a simplified check - we allow read if userId exists (full validation in app code)
    function canReadOwnerDocuments(ownerUserId) {
      // Simplified: allow if authenticated and userId exists
      // Full validation happens in application code by checking teamMembers
      return isAuthenticated() && ownerUserId != null && ownerUserId != '';
    }
    
    // Leads collection
    match /leads/{leadId} {
      // Allow read if:
      // 1. User owns the lead, OR
      // 2. Lead has teamId and team exists (team members can read)
      // Note: For legacy leads without teamId, we allow read if userId exists
      // Full team membership validation is done in application code (queries filter by ownerId)
      allow read: if isAuthenticated() && (
        isOwner(resource.data.userId) ||
        (resource.data.teamId != null && resource.data.teamId != '' && 
         exists(/databases/$(database)/documents/teams/$(resource.data.teamId))) ||
        // Allow reading if userId exists (for legacy leads - app code filters by team membership)
        canReadOwnerDocuments(resource.data.userId)
      );
      // Allow create if user is authenticated and sets their userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow update if user owns or is in the team
      allow update: if isAuthenticated() && (
        (isOwner(resource.data.userId) && request.resource.data.userId == resource.data.userId) ||
        (resource.data.teamId != null && resource.data.teamId == request.resource.data.teamId)
      );
      // Allow delete only if user owns (delete requires owner/admin role, validated in Cloud Functions)
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Documents collection
    match /documents/{documentId} {
      // Allow read if:
      // 1. User owns the document, OR
      // 2. Document has teamId and team exists (team members can read)
      // Note: For legacy documents without teamId, we allow read if userId exists
      // Full team membership validation is done in application code (queries filter by ownerId)
      allow read: if isAuthenticated() && (
        isOwner(resource.data.userId) ||
        (resource.data.teamId != null && resource.data.teamId != '' && 
         exists(/databases/$(database)/documents/teams/$(resource.data.teamId))) ||
        // Allow reading if userId exists (for legacy documents - app code filters by team membership)
        canReadOwnerDocuments(resource.data.userId)
      );
      // Allow create if user is authenticated and sets their userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow update if user owns or is in the team
      allow update: if isAuthenticated() && (
        (isOwner(resource.data.userId) && request.resource.data.userId == resource.data.userId) ||
        (resource.data.teamId != null && resource.data.teamId == request.resource.data.teamId)
      );
      // Allow delete only if user owns (delete requires owner/admin role, validated in Cloud Functions)
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Document Permissions collection
    match /documentPermissions/{permissionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
      // Note: Permissions are tied to documents, so we check document ownership
      // This is a simplified version - you might want to add document ownership checks
    }
    
    // Shared Documents collection (for tracking)
    match /sharedDocuments/{sharedId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
      // Note: Shared documents are tied to leads and documents
      // You might want to add more specific checks based on your needs
    }
    
    // Automation Rules collection
    match /automationRules/{ruleId} {
      // Allow read if user owns or is in the team
      allow read: if isAuthenticated() && (
        isOwner(resource.data.userId) ||
        (resource.data.teamId != null && resource.data.teamId != '')
      );
      // Allow create if user is authenticated and sets their userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow update if user owns or is in the team
      allow update: if isAuthenticated() && (
        (isOwner(resource.data.userId) && request.resource.data.userId == resource.data.userId) ||
        (resource.data.teamId != null && resource.data.teamId == request.resource.data.teamId)
      );
      // Allow delete only if user owns (delete requires owner/admin role, validated in Cloud Functions)
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Scheduled Tasks collection
    match /scheduledTasks/{taskId} {
      // Allow read if user owns the task or if querying by userId
      allow read: if isAuthenticated() && (
        isOwner(resource.data.userId) || 
        request.auth.uid == resource.data.userId
      );
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && (
        isOwner(resource.data.userId) || 
        request.auth.uid == resource.data.userId
      );
      allow delete: if isAuthenticated() && (
        isOwner(resource.data.userId) || 
        request.auth.uid == resource.data.userId
      );
    }
    
    // Lead Activities (historial de cambios)
    match /leadActivities/{activityId} {
      // Allow read for authenticated users (activities are tied to leads which have their own security)
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // Lead Comments (comentarios)
    match /leadComments/{commentId} {
      // Allow read for authenticated users (comments are tied to leads which have their own security)
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && isOwner(resource.data.userId);
    }
    
    // User Profiles collection
    match /userProfiles/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if false; // Don't allow deletion, use account deletion instead
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && isOwner(resource.data.userId);
      allow create: if false; // Only Cloud Functions can create notifications
      allow update: if isAuthenticated() && isOwner(resource.data.userId);
      allow delete: if isAuthenticated() && isOwner(resource.data.userId);
    }
    
    // Teams collection
    match /teams/{teamId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isAuthenticated() && (
        resource.data.ownerId == request.auth.uid ||
        // Allow admins to update team settings (but not ownerId)
        (request.resource.data.ownerId == resource.data.ownerId)
      );
      allow delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }
    
    // Team Members collection
    match /teamMembers/{memberId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || // User can update their own status
        // Team owner/admin can update roles (checked via team ownership)
        true // Will be validated in Cloud Functions
      );
      allow delete: if isAuthenticated(); // Will be validated in Cloud Functions
    }
    
    // Team Invitations collection
    match /teamInvitations/{invitationId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Investor Verification Codes collection
    // Note: Cloud Functions use Admin SDK and bypass these rules
    // These rules are for direct client access (which should not happen)
    match /investorVerificationCodes/{codeId} {
      allow read, write: if false; // Only accessible via Cloud Functions
    }
    
    // Investor Sessions collection
    // Note: Cloud Functions use Admin SDK and bypass these rules
    // These rules are for direct client access (which should not happen)
    match /investorSessions/{sessionId} {
      allow read, write: if false; // Only accessible via Cloud Functions
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
