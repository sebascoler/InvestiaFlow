rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Data Room: documents/{userId}/{documentId}/{filename}
    // User must be authenticated and path must be under their own userId
    match /documents/{userId}/{documentId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Team logos: teams/{teamId}/logo/{filename}
    // Allow read for all authenticated users (to display logos)
    // Allow write for authenticated users (permission validation happens in app code)
    match /teams/{teamId}/logo/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      // Note: Team ownership/admin validation is done in application code
      // before calling uploadFile. Storage rules can't query Firestore to check team membership.
    }
  }
}
